@page
@using System.Globalization
@using Microsoft.AspNetCore.Mvc.Localization
@model LogoutModel
@inject IViewLocalizer Localizer

@{
    Layout = "~/Pages/_Layout_Logout.cshtml";
}
@{
    ViewData["Title"] = @Loc["Logout"];
}

<div class="container parentbody-content">
    <div class="container body-content">
        <form class="box login" method="POST">
            <header>
                <img src="~/images/vg_logo.png">
            </header>
            <fieldset class="boxBody">
                <label>@Loc["You are sucessfully log out from ProAlfa Truck Management."]</label>
            </fieldset>
            <footer>
                <input type="submit" name="btnlogin" class="btnLogin" asp-page-handler="OK" value=@Loc["Login again"] tabindex="4">
            </footer>
        </form>
    </div>
</div>